run = "npm run dev"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[gitHubImport]
requiredFiles = [".config", "replit.nix"]

[deployment]
run = ["sh", "-c", "npm run build && npm run start"]
deploymentTarget = "gce"
publicDir = "dist/public"

[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

[env]
NODE_ENV = "development"